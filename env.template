TELEGRAM_API_HASH=086081059da79bbc02d865767e06c34c
# Either a phone number (international format) or a bot token
TELEGRAM_PHONE_OR_BOT_TOKEN=+19807779275
# Optional: 2FA password if your account has it enabled
TELEGRAM_2FA_PASSWORD=
# Optional: exact group name, invite link, @username, or numeric ID
