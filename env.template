# Optional: Messages fetch limit for history mode
TELEGRAM_HISTORY_LIMIT=100
# Optional: session file name (will create .session directory)
TELEGRAM_SESSION_NAME=visa_telegram

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/telegram_analytics

# OpenAI Configuration
OPENAI_API_KEY=

# Pinecone Configuration (Vector Database)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=telegram-messages

# Redis Configuration (for caching and queues)
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your-secret-key-here

# MongoDB Configuration (Primary Database)
# Option 1: Use full connection string (MongoDB Atlas)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/?retryWrites=true&w=majority

# Option 2: Build from components (self-hosted)
MONGODB_HOST=cluster0.xxxxx.mongodb.net
MONGODB_PORT=27017
MONGODB_DATABASE=visa_community
MONGODB_USERNAME=your-username
MONGODB_PASSWORD=your-password

# MongoDB Authentication
MONGODB_AUTH_MECHANISM=SCRAM-SHA-256
# Options: SCRAM-SHA-256, SCRAM-SHA-1, MONGODB-X509, MONGODB-AWS

# MongoDB TLS/Certificate Configuration
MONGODB_TLS_ENABLED=true
MONGODB_TLS_CERT_FILE=/path/to/client-certificate.pem
MONGODB_TLS_CA_FILE=/path/to/ca-certificate.pem

# Email Configuration
# Mode: "mock" (console only), "smtp" (Gmail/Outlook), "sendgrid", "aws_ses"
EMAIL_MODE=mock

# SMTP Configuration (for Gmail, Outlook, etc.)
# For Gmail: Use App Password from https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Visa Community Platform
